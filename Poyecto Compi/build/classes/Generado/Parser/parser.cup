        String value = "";
    if(s.value == null){
        value = "Se llego al final del archivo sin cerrar un bloque";
    }else
        value = s.value.toString();

    errores.add(". En el token: " + value + " En la linea: " + s.left + " En la columna: " + s.right);
    System.out.println("Error en la linea : (" + s.left + ") " + s.value);
   
  }
